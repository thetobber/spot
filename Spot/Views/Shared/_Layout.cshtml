                </svg>
            </a>
            <button class="button-unstyled d-none" type="button" data-toggle="expanded" data-target="#navlinks" aria-controls="navlinks" aria-expanded="false" aria-label="Toggle navigation">
                <svg class="d-block" width="44" height="36" xmlns="http://www.w3.org/2000/svg" focusable="false">
                    <rect rx="4" height="34" width="42" y="1" x="1" stroke-width="2" stroke="#343a40" fill="none" />
                    <rect rx="2" height="3" width="28" y="7" x="8" stroke-width="0" stroke="none" fill="#343a40" />
                    <rect rx="2" height="3" width="28" y="16" x="8" stroke-width="0" stroke="none" fill="#343a40" />
                    <rect rx="2" height="3" width="28" y="26" x="8" stroke-width="0" stroke="none" fill="#343a40" />
                </svg>
            </button>

            <ul id="navlinks" class="list-unstyled d-flex">
                <li><a class="active px-2" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a></li>
                <li><a class="px-2" href="@Url.Action("About", "Home")">About</a></li>
                <li><a class="px-2" href="@Url.Action("Contact", "Home")">Contact</a></li>
            </ul>

            <ul class="list-unstyled d-flex ml-auto">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a class="px-2" href="@Url.Action("SignIn", "Auth")">Sign in</a></li>
                }
                else
                {
                    <li><a class="px-2" href="@Url.Action("SignOut", "Auth")">Sign out</a></li>
                }
            </ul>
        </div>
    </nav>

    <main id="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer id="footer">
        <div class="container">
            <span>Footer content</span>
        </div>
    </footer>
</body>
</html>
